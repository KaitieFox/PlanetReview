@model IEnumerable<PlanetReview.Models.Category>

@{
    ViewBag.Title = "Index";
}

@*The top of the page plus Create New Button*@
<div class="jumbotron" id="category">
    <h1>Rear View Planet</h1>
    <p>planets already reviewed</p>
    <p>@Html.ActionLink("Add New RearView", "Create", new { @class = "btn btn-primary", role = "button" })
</div>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

@*Display for Planets in thumbnail.*@
@foreach (var item in Model)
{
    <div class="row">
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="" alt="">
            <div class="caption">
                <h3>@Html.DisplayFor(modelItem => item.PlanetName)</h3>
                <p>@Html.DisplayFor(modelItem => item.PlanetType)</p>
                <p>@Html.ActionLink("Edit this Planet", "Edit", new { id = item.ID }, new { @class = "btn btn-primary", role = "button" })</p>
                @*<p>@Html.ActionLink("Add to this planet's reviews", "", new { id = item.ID }, new { @class = "btn btn-primary", role = "button" })</p>*@
            </div>
        </div>
    </div>
</div>
}

